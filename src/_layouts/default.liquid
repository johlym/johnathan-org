<!doctype html>
<html lang="{{ site.locale }}">

<head>
  {% render "head", metadata: site.metadata, title: page.title %}
</head>

<body class="site {{ resource.data.layout }} {{ resource.data.page_class }}">
<header>
{% render "navbar", metadata: site.metadata, 
                    resource: resource, 
                    nav: site.data.nav %}
</header>
<main>
{% assign content_type = page.layout %}
  <section class="content">
    {{ content }}
  </section>
</main>

<footer>
  <section>
    <p class="text-center"><a href="https://github.com/{{ site.metadata.repo }}/blob/main/src/{{ resource.relative_path }}">Edit on GitHub <i class="fa-sharp fa-solid fa-up-right-from-square"></i></a></p>
    {% render "footer", metadata: site.metadata, nav: site.data.nav, nav2: site.data.elsewhere %}
  </section>
</footer>
  
</body>

</html>
