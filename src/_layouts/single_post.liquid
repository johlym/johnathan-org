---
layout: default
---

<article>
  <header class="mb-5">
    <h1>{{ page.title }}</h1>
    <div class="meta small">
      Posted: {{ page.date | date: "%B %d, %Y"}} | Word Count:
      {{ page.content | number_of_words }} | Reading Time:
      {{ page.content | reading_time }} minutes
    </div>
    <div class="post-image">
      <img src="{{ page.image }}">
    </div>
  </header>
  <div class="content">
    {{ content }}
  </div>
</article>