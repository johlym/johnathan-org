<div class="py-4">
  <h3>
    <a class="text-dark text-decoration-none fw-700"
      href="{{ post.relative_url }}">{{ post.title }}</a>
  </h3>
  {% if excerpt == "true" %}
  <p>
    {% if post.excerpt %}
    {{ post.excerpt }}
    {% else %}
    {{ post.content | strip_html | truncatewords:30 }}
    {% endif %}
  </p>
  {% endif %}
  <p class="small text-muted fw-600 my-0">
    Originally posted on {% assign d = post.date | date: "%-d" %}
{{ post.date | date: "%B" }} 
{% case d %}{% when "1" or "21" or "31" %}{{ d }}st{% when "2" or "22" %}{{ d }}nd{% when "3" or "23" %}{{ d }}rd{% else %}{{ d }}th{% endcase %}, 
{{ post.date | date: "%Y" }} â€¢
    {{ post.content | number_of_words }} words  </p>
</div>